<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgvalute"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.appacademy.convertitoredivalute.MainActivity">

    <TextView
        android:id="@+id/tvEuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/tvEuro"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tvDollari"
        app:layout_constraintEnd_toStartOf="@+id/etEuro"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etEuro"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:hint="@string/etEuro"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/tvDollariV"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="48dp" />

    <TextView
        android:id="@+id/tvDollari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/tvDollari"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btConverti"
        app:layout_constraintEnd_toStartOf="@+id/tvDollariV"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDollariV"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:layout_marginEnd="48dp"
        android:text=""
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btConverti"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="48dp" />

    <Button
        android:id="@+id/btConverti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:onClick="convertiValuta"
        android:text="@string/btConverti"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
